[alias]
  bm = branch --merged
  dd = diff --dirstat --find-copies --find-renames --histogram --color
  discard = !git stash save --keep-index --include-untracked && git stash drop
  prune = fetch --prune
  sl = stash list --pretty=format:\"%C(red)%h%C(reset) - %C(dim yellow)(%C(bold magenta)%gd%C(dim yellow))%C(reset) %<(70,trunc)%s %C(gree  n)(%cr) %C(bold blue)<%an>%C(reset)\"
  stash-all = stash save --include-untracked
  undo = reset --soft HEAD^
  unstage = reset HEAD --
[core]
   pager = delta --theme="cobalt2"
[delta]
  features = line-numbers decorations
  line-numbers = true
  syntax-theme = cobalt2
  whitespace-error-style = 22 reverse
[delta "decorations"]
  commit-decoration-style = bold yellow box ul
  file-decoration-style = none
  file-style = bold yellow ul
[diff]
  algorithm = patience
  colorMoved = default
[difftool]
  prompt = false
[help]
  autocorrect = 1
[http "https://gopkg.in"]
  followRedirects = true
[init]
  defaultBranch = main
[interactive]
  diffFilter = delta --color-only --theme="cobalt2"
[merge]
  conflictstyle = diff3
  tool = nvim
[mergetool]
  prompt = false
[mergetool "nvim"]
  cmd = nvim -f -c \"Gdiff\" \"$MERGED\"
[pager]
  diff = delta
  log = delta
  reflog = delta
  show = delta
[push]
  default = simple
  followTags = true
[status]
  showUntrackedFiles = all
[transfer]
  fsckobjects = true
[user]
  email = [EMAIL]
  name = [NAME]
